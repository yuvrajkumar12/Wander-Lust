<% layout("/layouts/boilerplate") %>
  <div class="row mt-3">
    <div class="col-8 offset-2">
      <h3>Create a New Listing</h3>
      <form method="POST" action="/listings">
        <div class="mb-3">
          <label for="title" class="form-label">Title</label>
          <input name="listing[title]" type="text" class="form-control"/>
        </div>
        <div class="mb-3">
          <label for="image.url" class="form-label">Image Link</label>
          <input
          name="listing[image.url]"
          placeholder="Enter image URL/Link"
          type="text"
          class="form-control"
        />
        </div>
        <!-- This is Description input form -->
        <div class="mb-3">
          <label for="Description" class="form-label">Description</label>
          <textarea
          name="listing[description]"
          class="form-control"
        ></textarea>
        </div>
        <!-- This is price input form -->
        <div class="row">
          <div class="md-3 col-md-4">
            <div class="mb-3">
              <label for="Price" class="form-label">Price</label>
              <input name="listing[price]"  type="number" class="form-control" />
            </div>
          </div>
          <!--This is countary Input form -->
          <div class="md-3 col-md-8">
            <div class="mb-3">
              <label for="Enter Country" class="form-label">Enter country</label>
              <input name="listing[country]" type="text" class="form-control"/>
            </div>
          </div>
        </div>
        <!-- This is location Input form -->
        <div class="mb-3">
          <label for="Location" class="form-label">Location</label>
          <input
          name="listing[location]"
          placeholder="Enter location"
          type="text"
          class="form-control"
        />
        </div>
        <button class="btn btn-dark add-btn mt-3">Add</button>
      </form>
    </div>
  </div>
